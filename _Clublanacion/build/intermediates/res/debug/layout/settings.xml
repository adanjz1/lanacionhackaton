<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/White"
    android:scrollbars="vertical">
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/back" />

        </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="450dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="5dp"
        android:layout_marginTop="55dp"
        android:layout_marginRight="50dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="right"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">
            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:id="@+id/chkGastronomia"
                android:layout_column="13"
                android:button="@drawable/cb_selector"
                android:checked="true"
                android:singleLine="false"
                android:layout_marginTop="30dp" />
            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:id="@+id/chkEntretenimiento"
                android:button="@drawable/cb_selector"
                android:layout_column="13"
                android:layout_marginTop="7dp"
                android:checked="true" />
            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:id="@+id/chkTurismo"
                android:button="@drawable/cb_selector"
                android:layout_column="13"
                android:layout_marginTop="7dp" />
            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:id="@+id/chkCuidadoPersonal"
                android:button="@drawable/cb_selector"
                android:layout_column="13"
                android:layout_marginTop="7dp" />
            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:id="@+id/chkModa"
                android:button="@drawable/cb_selector"
                android:layout_column="13"
                android:layout_marginTop="7dp" />
            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:id="@+id/chkMasCategorias"
                android:button="@drawable/cb_selector"
                android:layout_column="13"
                android:layout_marginTop="5dp" />
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="315dp"
        android:layout_height="100dp"
        android:gravity="left"
        android:orientation="horizontal"
        android:padding="5dp"
        android:layout_marginTop="365dp"
        android:layout_marginLeft="20dp">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2">

            <Button

                android:layout_height="wrap_content"
                android:text="Classic"
                android:id="@+id/btnClasica"
                android:layout_width="0px"
                android:layout_weight="1" />

            <Button

                android:layout_height="wrap_content"
                android:text="Premium"
                android:id="@+id/btnPremium"
                android:layout_alignParentTop="true"
                android:layout_width="0px"
                android:layout_weight="1"/>

        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
            android:layout_width="298dp"
            android:layout_height="100dp"
        android:layout_marginTop="420dp"
        android:layout_marginLeft="30dp">

            <SeekBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/seekPorcentaje"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:max="100"
                android:progress="50"
                android:progressDrawable="@drawable/scrubber_progress"
                android:thumb="@drawable/scrubber_control" />

        </RelativeLayout>
    <RelativeLayout
        android:layout_width="298dp"
        android:layout_height="30dp"
        android:layout_marginTop="517dp"
        android:layout_marginLeft="30dp">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="50%"
            android:id="@+id/txtDescuentos" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="50%"
            android:id="@+id/txtNoticias"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>


    </FrameLayout>
